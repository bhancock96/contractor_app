<!DOCTYPE html>
<html>
<head>
  <title>ContractorApp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<% if session[:contractor_id] %>
		<%= link_to "Logout", logout_url, method: :post %>
	<% else %>
		<%= link_to "Sign In", new_session_url %>
		<%= link_to "Register", new_contractor_url %>
	<% end %>	

<%= yield %>

</body>
</html>
