<div>
	<%= form_tag({action: "index"}, method: "get", id: 'sorter') do %>
		<%= label_tag "Sort by" %>
		<%= select_tag :sort_by, options_for_select(["Customer Name", "Date", "Store", "Items Bought"]) %>
		<%= hidden_field_tag(:contractor_id, @contractor.id) %>
		<%= submit_tag "Sort" %>
	<% end %>

	<table>
		<tr>
			<th>Job</th>
			<th>Date</th>
			<th>Store</th>
			<th>Items Bought</th>
			<th>Amount</th>
		</tr>
		<% @expenses.each do |expense| %>
		<tr>
			<td><%= expense.job.customer_name %></td>
			<td><%= expense.created_at.strftime "%m-%d-%Y" %></td>
			<td><%= expense.store %></td>
			<td><%= expense.expense_type %></td>
			<td>$<%= expense.amount %></td>
		</tr>	
		<%end%>
	</table>
</div>