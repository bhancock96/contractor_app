<h1 id='business_name'><%= @contractor.business_name %></h1>

<%= link_to "Create a Job", new_contractor_job_url(@contractor) %>
<%= link_to "Total Expenses", contractor_expenses_url(@contractor) %>

<div>
	<% if @contractor.jobs %>
	<h3>Current Jobs</h3>
	<ul>
		<% @contractor.jobs.each do |job| %>
			<li><%= link_to "#{job.customer_name}", contractor_job_url(@contractor, job)%></li>
		<% end%>
	</ul>
	<% end %>
</div>
<div>
	<h3>Business Statistics</h3>
	<ul>
		<li>Total Jobs: <%=@contractor.jobs.count %></li>
		<li>Jobs Completed: <%=@contractor.jobs.where(status: 'produced').count%></li>
		<li>Total Booked</li>
		<li>Total Produced</li>
		<li>Profit Margin</li>
		<li>Profit in Dollars</li>
	</ul>
</div>